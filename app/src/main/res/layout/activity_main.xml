<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/mainBG"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/moneyManagementPanel"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@color/player_button"
            android:gravity="center"
            android:text="PLAYER"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/purple"
                android:gravity="center"
                android:text="Stake"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/button_borders"
                android:gravity="center"
                android:text="0.20"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/moneyManagementPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/StartNowUnitsProfit"
        android:layout_marginBottom="2dp"
        android:scrollX="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Pos 1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Base"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Step 2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Step 3"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Step 4"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Step 5"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:text="Step 6"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/StartNowUnitsProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PeakTroughDrawdownPanel"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <!-- First grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/Start"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>
            <!-- Second grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/Now"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

            <!-- Third grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/Units"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

            <!-- Forth grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/Profit"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/PeakTroughDrawdownPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsPanel"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <!-- First grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/peak"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="0.0%"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>
            <!-- Second grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/trough"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="0.0%"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

            <!-- Third grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="@string/drawdown"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="0.0%"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp"

        android:weightSum="5">

        <!-- Lower part of the screen with five equal-sized grids -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <!-- First grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">
                <!-- Add your views for the first grid here -->
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_player"
                    android:text="P"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />


            </GridLayout>

            <!-- Second grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_banker"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </GridLayout>

            <!-- Third grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_skip"
                    android:paddingStart="17dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    app:srcCompat="@drawable/skip" />
            </GridLayout>

            <!-- Fourth grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="5dp">
                <!-- Add your views for the fourth grid here -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_undo"
                    android:paddingStart="17dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    app:srcCompat="@drawable/back_undo" />
            </GridLayout>

            <!-- Fifth grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!-- Add your views for the fifth grid here -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_delete"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    app:srcCompat="@drawable/reset" />
            </GridLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>